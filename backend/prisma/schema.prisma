generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scan {
  id          String   @id @default(uuid())
  url         String
  status      String   @default("PENDING")
  carbonScore Float?   // e.g. 0.45
  reportData  Json?    // The detailed analysis
  createdAt   DateTime @default(now())
}